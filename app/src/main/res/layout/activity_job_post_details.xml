<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:orientation="vertical"
    android:padding="13dp">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/back_ground">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="13dp"
            android:onClick="onBackButtonPressed"
            android:padding="5dp"
            android:src="@drawable/ic_left_back" />

        <com.papercutlabs.jobstar.view.CustomTextView
            android:id="@+id/ctv_jobTitle"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_back"
            android:layout_marginTop="7dp"
            android:paddingLeft="13dp"
            android:text="Looking for a Customer Support Executive"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            app:typeface="sfuiMedium" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/ib_share"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="130dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_share" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_header"
        android:orientation="vertical">

        <com.papercutlabs.jobstar.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="About XERAGO"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:typeface="sfuiMedium" />

        <com.papercutlabs.jobstar.view.CustomTextView
            android:id="@+id/ctv_aboutCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/middle_lorem_ipsum"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/white"
            app:typeface="sfuiRegular" />

        <com.papercutlabs.jobstar.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Job Description"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:typeface="sfuiMedium" />

        <com.papercutlabs.jobstar.view.CustomTextView
            android:id="@+id/ctv_job_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/middle_lorem_ipsum"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/white"
            app:typeface="sfuiRegular" />

        <com.papercutlabs.jobstar.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Responsibility"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:typeface="sfuiMedium" />

        <com.papercutlabs.jobstar.view.CustomTextView
            android:id="@+id/ctv_responsibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/middle_lorem_ipsum"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/white"
            app:typeface="sfuiRegular" />

        <com.papercutlabs.jobstar.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Key Skills"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:typeface="sfuiMedium" />

        <com.papercutlabs.jobstar.view.CustomTextView
            android:id="@+id/ctv_keyskills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/middle_lorem_ipsum"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/white"
            app:typeface="sfuiRegular" />

